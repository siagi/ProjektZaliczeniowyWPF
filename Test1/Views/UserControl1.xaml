<UserControl x:Class="Test1.Views.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Test1.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1500" d:DesignWidth="1100">
    <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Width="1100" Height="1500" Background="#000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="213*"/>
            <ColumnDefinition Width="887*"/>
        </Grid.ColumnDefinitions>
        <TextBlock FontSize="30" Text="{Binding NewOrderStatus}" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left"  FontSize="50" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="642" Height="220" Grid.ColumnSpan="2"/>

    </Grid>
</UserControl>
