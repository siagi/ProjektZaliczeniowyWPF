        <TextBox HorizontalAlignment="Left" Height="23" Margin="490,147,0,0" TextWrapping="Wrap" Text="{Binding Path=CurrentOrder.DeliveryName, Mode=TwoWay}" VerticalAlignment="Top" Width="223"/>

